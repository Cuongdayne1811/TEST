mixin alert-success(time)
    - if (messages.success)
            .message.info
                div(
                    class = "alert alert-success"
                    show-alert
                    data-time = time
                )   #{messages.success} <span close_alert> x </span>

mixin alert-error(time)
    - if (messages.error)
            .message.info
                div(
                    class = "alert alert-danger"
                    show-alert
                    data-time = time
                )   #{messages.error} <span close_alert> x </span>